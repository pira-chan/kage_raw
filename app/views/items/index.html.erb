        <% if item == Item.last %>
        <p class = "new">NEW</p>
        <% end %>
        <%= link_to image_tag(item.cr_item), "/items/#{item.id}/show0" %>
         <%= link_to item.title, "/items/#{item.id}/show0", method: :get %>
