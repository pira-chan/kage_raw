<%= form_for @inquiry, :url => inquiries_confirm_path do |f| %>
  <div class="inquiry-header">
    <h1>お問い合わせ</h1>
  </div>
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="request-content">
    <div class="request-kage">
      <%= image_tag "依頼する女2" %>
    </div>
    <table class="table">
      <tr>
        <th>名前</th>
        <td><%= f.text_field :name, class: "inquiry-area" %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email, class: "inquiry-area" %></td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td><%= f.text_area :message, class: "inquiry-area main-form" %></td>
      </tr>
    </table>
  </div>
  <div class="inquiry-send">
    <td><%= f.submit "確認", class: "inquiry-send" %></td>
  </div>
<% end %>


